    <ImageView
        android:id="@+id/cloud_image"
        android:layout_width="@dimen/cloud_icon_width"
        android:layout_height="@dimen/cloud_icon_width"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cloud_icon_width"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/cloud_image"
        android:layout_marginLeft="5dp"
        >
    <TextView
        android:id="@+id/cloud_image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/image_name_text_size"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/colorBlack"
        />
    <TextView
        android:id="@+id/cloud_image_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        />
    </LinearLayout>
</RelativeLayout>
